{
  "compilerOptions": {
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/tests/*": [
        "tests/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}